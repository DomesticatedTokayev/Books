
<%- include("partials/header.ejs")%>

<%if(locals.book) {%>
    <main class="main">
        <section class="selected-book">
            <%if(book[0].has_cover){%>
            <img class="selected-book__image" src="https://covers.openlibrary.org/b/<%=book[0].id_type%>/<%=book[0].id_number%>-M.jpg?default=false" alt="Book Cover" width="250px" height="350px" onerror="loadError()" onload="isLoaded()">
            <%} else {%>       
                <div class="no_book_cover">
                    <p><%=book[0].title%></p>
                </div> 
                <%}%>
            <div class="selected-book__info">
                <h2><%=book[0].title%></h2>
                <%if(book[0].id_number !== "") {%>
                        <p><span class="bold white">ISBN: </span><%=book[0].id_number%></p>
                    <%}%>
                <p><span class="bold white">Date Read: </span><%=book[0].date_read%></p>
                <p><span class="bold white">Rating: </span><%=book[0].rating%>/10</p>
            </div>
            <h3>Summary:</h3>
            <p><%=book[0].summary%></p>
            <hr class="divider" />
            <h3>Notes:</h3>
            <p><%=book[0].notes%></p>
        </section>
    </main>
<%}%>

<script src="navigation.js"></script>

<%- include("partials/footer.ejs"); %>