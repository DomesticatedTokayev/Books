
<%- include("partials/header.ejs")%>

<%if(locals.book) {%>
    <main class="main">
        <section class="selected-book">
            <%if(book.has_cover){%>
            <img class="selected-book__image" src="https://covers.openlibrary.org/b/<%=book.id_type%>/<%=book.id_number%>-M.jpg?default=false" alt="Book Cover" width="250px" height="350px">
            <%} else {%>       
                <div class="no_book_cover">
                    <p><%=book.title%></p>
                </div> 
                <%}%>
            <div class="selected-book__info">
                <h2><%=book.title%></h2>
                <%if(book.id_number !== "") {%>
                        <p><span class="bold white">ISBN: </span><%=book.id_number%></p>
                    <%}%>
                <p><span class="bold white">Date Read: </span><%=book.date_read%></p>
                <p><span class="bold white">Rating: </span><%=book.rating%>/10</p>
            </div>
            <h3>Summary:</h3>
            <p><%=book.summary%></p>
            <hr class="divider" />
            <h3>Notes:</h3>
            <p><%=book.notes%></p>
        </section>
    </main>
<%}%>

<%- include("partials/footer.ejs"); %>